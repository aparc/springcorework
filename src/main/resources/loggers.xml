<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="package1.beans.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="package1.beans.FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="package1.beans.CacheFileEventLogger" parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="5"/>
    </bean>
</beans>
