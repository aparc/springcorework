<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="package1.beans.Client">
            <constructor-arg value="1"/>
            <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="package1.beans.ConsoleEventLogger"/>

    <bean id="event" class="package1.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="fileEventLogger" class="package1.beans.FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="package1.beans.CacheFileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="target/events_log.txt"/>
        <constructor-arg value="5"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
        factory-method="getDateTimeInstance"/>

    <bean id="app" class="package1.App">
        <constructor-arg ref="client"/>
        <!--<constructor-arg ref="eventLogger"/>-->
        <constructor-arg ref="fileEventLogger"/>
   </bean>
</beans>
